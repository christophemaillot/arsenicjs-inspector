<html>
    <head>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" />
<style>
#header {
    width: 100%;
    height: 48px;
    line-height: 48px;
    text-align: center;
    margin-bottom: 24px;
    border-bottom: 1px solid #F0F0F0;
    box-shadow: 0px 2px 5px #F0F0F0;
}

td,th {
    padding-left: 8px;
    padding-right: 8px;
}

</style>
    </head>
    <body>

        <div id="header">
            ArsenicJS inspector
        </div>

        <div class="container">
            <table>
                <tr>
                    <th>Date/time</th>
                    <th>Method</th>
                    <th>Path</th>
                    <th>Duration</th>
                    <th>Returned status</th>
                </tr>
{% for item in requests %}
                <tr>
                    <td>{{item.timestamp | ts}}</td>
                    <td>{{item.method}}</td>
                    <td>{{item.path}}</td>
                    <td>{{item.duration}}</td>
                    <td>{{item.status}}</td>
                </tr>
{% endfor %}
            </table>
        </div>
    </body>
</html>